@model string
<div class="row">
    <div class="col-lg-6 col-md-8 col-sm-10 col-lg-offset-3 col-md-offset-2 col-sm-offset-1 wow animated fadeInLeftBig" data-wow-delay="0.7s">
       @using (Html.BeginForm("Busca", "Home", FormMethod.Get, new { id="search", @class="search"}))
       {
           @Html.TextBox("termo", Model, new { placeholder = "Com o que você quer se divertir hoje?" })
           <a href="javascript:void(0);" id="btn-buscar">OK</a>
       }
    </div>
</div>
